@model List<FPTJobMatch.MVC.Models.JobCategoryViewModel>

<table class="table">
    <tr>
        <th width="10%">No</th>
        <th width="15%">Job</th>
        <th width="30%">Description</th>
        <th width="30%">Action</th>
    </tr>
    @if(Model != null && Model.Count > 0)
    {
        foreach(var jobCategory in Model)
        {
            <tr>
                <td>@jobCategory.Position</td>
                <td>@jobCategory.Name</td>
                <td>@jobCategory.Description</td>
                <th>
                    <a href="~/JobCategory/Edit?idJob=@jobCategory.Id" class="btn btn-primary">Edit</a>
                    <button type="button" onclick="deleteJobCategory('@jobCategory.Id')" class="btn btn-danger">Delete</button>
                </th>
            </tr>
        }
    }
</table>