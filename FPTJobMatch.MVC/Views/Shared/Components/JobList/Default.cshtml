@model List<FPTJobMatch.MVC.Models.JobViewModel>

<table class="table">
    <tr>
        <th width="10%">No</th> 
        <th width="20%">Name</th> 
        <th width="15%">Company</th> 
        <th width="15%">Location</th> 
        <th width="20%">Description</th> 
        <th width="20%">Actions</th> 
    </tr>
    @if (Model != null && Model.Count > 0)
    {
        var position = 1;
        foreach (var job in Model)
        {
            <tr>
                <td>@(position++)</td>
                <td>@job.Name</td>
                <td>@job.CompanyName</td>
                <td>@job.Location</td>
                <td>@job.Description</td>
                <th>
                    <a href="~/Job/Edit?idJob=@job.Id" class="btn btn-primary">Edit</a>
                    <button type="button" onclick="deleteJob('@job.Id')" class="btn btn-danger">Delete</button>
                </th>
            </tr>
        }
    }else
    {
         <tr>                 
             <td colspan="7" class="text-center">No jobs available</td> 
         </tr> 
    }
</table>
